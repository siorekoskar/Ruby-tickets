<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
        <div class="col-sm-12  mx-auto p-4">
<div class="form-group" style="margin-left: 100px; margin-right: 100px">
<h1>New Ticket</h1>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :class => "form-control"%>
  </div>

  <div class="field">
    <%= form.label :seat_id_seq %>
    <%= form.text_field :seat_id_seq, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :email_address %>
    <%= form.text_field :email_address, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :event_id %>
    <%= form.hidden_field :event_id, :value => ticket.event_id%>
  </div>

<%= form.select(:event_id, options_for_select(Event.all.map { |c| [c.artist + ' ' + c.event_date.to_s, c.id]}, ticket.event_id), {}, {class: "form-control", id: "dropdownMenuButton"}) %>


<div class="field">
    <%= form.hidden_field :user_id, :value => current_user.id%>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
  
  </div>
  </div>
  </div>
<% end %>
